
    <form action="/user/login" method="post" class="formLogin">
 <h2 class="text-center">Ingreso</h2>
      <label class="form-label" for="usuario">Usuario</label>
      <input class="form-control" type="text" id="usuario" name="usuario" placeholder="Ingrese DNI o Usuario">
      <br>
      <label class="form-label" for="password">Contraseña</label>
      <input class="form-control" type="number" id="password" name="password" placeholder="Ingrese Contraseña">
      <br>
      <button class="btn btn-secondary" type="reset" >Limpiar</button>
      <button class="btn btn-success" type="submit">Ingresar</button>
      <a href="/user/form" class="btn btn-danger">Crear Usuario</a> 
   </form>